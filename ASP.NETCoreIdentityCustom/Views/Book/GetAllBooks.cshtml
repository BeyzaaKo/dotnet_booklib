@model IEnumerable<ASP.NETCoreIdentityCustom.Models.BookModel>
@{
    Layout = "_Layout";
}

<div class="container">
    <h4 class="display-4">All books</h4>
    <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="90%" height="200" xmlns="https://www.w3.org/2000/svg"></svg>
                        <div class="card-body">
                            <h3 class="card-title">@book.Title</h3>
                            <p class="card-text">@book.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/books/details" class="btn btn-sm btn-outline-secondary">View details</a>
                                </div>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>