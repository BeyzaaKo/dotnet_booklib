<!--ROLE VIEWS-->
@{
    ViewData["Title"] = "Discover Page";
}

<style>
    .special-heading {
        font-size: 30px;
        color: #003300;
    }
</style>

<div class="py-3 bg-light">
    <div class="container">
        <h3 class="special-heading">See what's new...</h3>
        <div class="row">
            @for (int i = 1; i <= 36; i++)
            {
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="90%" height="200" xmlns="https://www.w3.org/2000/svg"></svg>
                        <div class="card-body">
                            <h3 class="card-title">Book Title</h3>
                            <p class="card-text">This section will be description of book @i.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/books/details" class="btn btn-sm btn-outline-secondary">View details</a>
                                </div>
                                <small class="text-muted">Sample Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>